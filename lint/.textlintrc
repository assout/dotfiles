---
  rules:
    common-misspellings: true
    ja-no-weak-phrase: true
    # ja-yahoo-kousei: true # TODO 登録が必要
    # max-appearence-count-of-words: true # TODO 誤爆が多い
    # max-number-of-lines: true # Note: 文書はしかたない
    max-length-of-title: true
    no-dead-link: true
    no-dropping-the-ra: true
    no-start-duplicated-conjunction: true
    preset-japanese: true # Note: slow(no-mix-dearu-desumasuが遅そう)
    # preset-jtf-style: true
    prh:
      rulePaths:
        - "~/.prh.yml"

